<div id="movie-card-list" class="row w-100 bg-dark ms-1 mt-4 container-fluid align-items-center">
    <h3 class="text-warning text-center fw-bold mt-3 mb-5 w-100" style="font-size: 3rem; text-shadow: 2px 2px 8px rgba(255,255,255,0.3); letter-spacing: 5px;">See Some Of Our Movies</h3>

    @foreach (var category in Model)
    {
        if (category.Id < 3)
        {
            <h4 class="text-light text-center fw-bold mt-5 mb-3" style="font-size: 3rem; text-shadow: 2px 2px 8px rgba(255,255,255,0.3); letter-spacing: 5px;">@category.Name MOVIES</h4>

            <div class="owl-carousel owl-theme">
                @foreach (var item in category.Movies)
                {
                    if (item.MovieStatus < 2)
                    {
                        <div class="movie-card item pt-2" data-movie="@item.Name">
                            <div class="movie-card__overlay"></div>

                            <div class="row m-1 w-100">
                                <h3 class="movie-card__title">@item.Name</h3>
                            </div>

                            <div class="row align-items-center">
                                <div class="movie-img col-lg-5 col-md-5 col-sm-12 d-flex justify-content-center">
                                    <img class="movie-img-img w-100 h-100" src="../../images/movies/@item.ImgUrl" />
                                </div>

                                <div class="movie-card__content col">
                                    <div class="movie-card__header align-items-start">
                                        <h3 class="movie-card__info float-start">@item.Price.ToString("c")</h3>
                                        <h6 class="movie-card__desc float-start">📅Start Date: @item.StartDate</h6>
                                        <h6 class="movie-card__desc float-start">🎬Category: @item.Category.Name</h6>

                                        @if (item.MovieStatus == 2)
                                        {
                                            <button type="button" class="btn btn-warning movie-card__button" disabled>Upcoming</button>
                                        }
                                        else if (item.MovieStatus == 1)
                                        {
                                            <button type="button" class="btn btn-info movie-card__button" disabled>Available</button>
                                        }
                                        else
                                        {
                                            <button type="button" class="btn btn-danger movie-card__button" disabled>Expired</button>
                                        }
                                    </div>

                                    <div class="row w-100 d-flex justify-content-start">
                                        <a href="/Customer/Home/Details?MovieId=@item.Id" class="btn btn-outline-primary movie-card__button col-lg-5 col-md-5 col-sm-5 me-1">Details</a>
                                        <a class="btn btn-success movie-card__button col-lg-5 col-md-5 col-sm-5 ms-1">Book</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
            <div class="text-center">
                <a href="/Customer/Home/ShowCategory?categoryId=@category.Id" class="btn btn-outline-warning btn-lg">See More</a>
            </div>
            <hr class="text-light mt-5 mb-5" />
        }
    }
</div>




   







