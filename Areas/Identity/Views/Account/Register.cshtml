@using CinemaWebSite.Models.ViewModels
@model RegisterVM





<div class="col">
    <div class="table-responsive mt-5">
        <section class="get-in-touch">
            <h1 class="title">Register</h1>
            @if (Model.UserName != null && Model.Email != null && Model.PhoneNumber != null && Model.Password != null && Model.EmailConfirmed == false)
            {
                <div class="alert alert-danger" role="alert">
                    Please, Confirm Your Email!
                </div>
            }
            <form asp-action="Register" class="contact-form row px-3">
                <div asp-validation-summary="ModelOnly" class="text-danger "></div>
               
                
                    <div class="form-field ">
                        <label asp-for="UserName" class="control-label "></label>
                        <input asp-for="UserName" class="form-control input-text js-input" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-field ">
                        <label asp-for="Email" class="control-label "></label>
                        <input asp-for="Email" class="form-control input-text js-input" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                <div class="form-field">
                    <label asp-for="PhoneNumber" class=" control-label"></label>
                    <input asp-for="PhoneNumber" class="form-control input-text js-input" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                    <div class="form-field col-lg-6">
                        <label asp-for="Password" class="control-label "></label>
                        <input asp-for="Password" class="form-control input-text js-input" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-field col-lg-6">
                        <label asp-for="ConfirmedPassword" class="control-label "></label>
                        <input asp-for="ConfirmedPassword" class="form-control input-text js-input" />
                        <span asp-validation-for="ConfirmedPassword" class="text-danger"></span>
                    </div>
                <div class="d-flex justify-content-center align-items-center " style="height: 100%;">
                    <input type="submit" value="REGISTER" class="submit-btn " />
                </div>
                <div class="form-group form-field form-check">
                    <a href="/Identity/Account/Login" class="text-decoration-none text-light fw-bold custom-link mt-5">
                        Already have an account? <span class="text-primary">Login</span>
                    </a>
                </div>
               
            </form>
            
        </section>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    
}
