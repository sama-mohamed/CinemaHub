<div class="container-fluid">
    <div class="row flex-nowrap">

        @Html.Partial("../shared/_SideBar.cshtml")


        <div class="col">
            <div class="table-responsive mt-5">
                <div class="d-flex align-items-center ms-3 mb-3" style="width: 90%; margin: auto;">
                    <h1 class="table-title me-auto">Cinemas:</h1>
                    <a href="/Admin/Cinema/AddCinema" type="button" class="btn btn-success btn-lg"><i class="bi bi-plus-circle"></i> Add Cinema</a>
                </div>

                <table class="table table-striped table-hover text-center" style="width: 100%; max-width: 90%; margin: auto;">
                    <thead>
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Name</th>
                            <th scope="col">Description</th>
                            <th scope="col">Address</th>
                            <th scope="col">Show Movies</th>
                            <th scope="col">Edit</th>
                            <th scope="col">Remove</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th scope="row">@item.Id</th>
                                <td>@item.Name</td>
                                <td>@item.Description</td>
                                <td>@item.Address</td>
                                <td><a href="/Admin/Cinema/ShowMovies?CinemaId=@item.Id">All Movies</a></td>
                                <td>
                                    <a href="/Admin/Cinema/EditCinema?CinemaId=@item.Id" type="button" class="btn btn-warning"><i class="bi bi-pencil-square"></i> Edit</a>
                                </td>
                                <td>
                                    <a href="/Admin/Cinema/DeleteCinema?CinemaId=@item.Id" type="button" class="btn btn-danger"><i class="bi bi-trash3"></i> Remove</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>