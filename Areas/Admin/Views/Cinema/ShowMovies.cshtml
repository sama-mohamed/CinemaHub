<div class="container-fluid">
    <div class="row flex-nowrap">

        @Html.Partial("../shared/_SideBar.cshtml")


        <div class="col">
            <div class="table-responsive mt-5">
                <div class="d-flex align-items-center ms-3 mb-3" style="width: 90%; margin: auto;">
                    <h1 class="table-title me-auto">Movies in @Model.Name:</h1>
                </div>

                <table class="table table-striped table-hover text-center" style="width: 100%; max-width: 90%; margin: auto;">
                    <thead>
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Name</th>
                            <th scope="col">Description</th>
                            <th scope="col">Price</th>
                            <th scope="col">ImgUrl</th>
                            <th scope="col">TrailerUrl</th>
                            <th scope="col">StartDate</th>
                            <th scope="col">EndDate</th>
                            <th scope="col">MovieStatus</th>
                            <th scope="col">Edit</th>
                            <th scope="col">Remove</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Movies)
                        {
                            <tr>
                                <th scope="row">@item.Id</th>
                                <td>@item.Name</td>
                                <td>@item.Description</td>
                                <td>@item.Price</td>
                                <td>
                                    <img src="~/images/movies/@item.ImgUrl" alt="Movie Image" style="width: 80px; height: auto;" />
                                </td>
                                <td><a href="@item.TrailerUrl">Click Here</a></td>
                                <td>@item.StartDate</td>
                                <td>@item.EndDate</td>
                                <td>@item.MovieStatus</td>

                                <td>
                                    <a href="/Admin/Cinema/EditCinema?CinemaId=@item.Id" type="button" class="btn btn-warning">Edit</a>
                                </td>
                                <td>
                                    <a href="/Admin/Cinema/DeleteCinema?CinemaId=@item.Id" type="button" class="btn btn-danger">Remove</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>